@model IEnumerable<Project2.Models.Mission>

@{
    ViewBag.Title = "Selection";
}

<h2>Selection</h2>


 <div class="dropdown">
     <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
         Missions 
     <span class="caret"></span></button>
     <ul class="dropdown-menu">
         @foreach (var item in Model)
         {
             <li> @Html.ActionLink(item.MissionName, "MissionFAQ", "MissionQuestions", new { id = item.MissionID },null) </li>
         }
     </ul>
 </div>

    
