@model Project2.Models.MissionQuestion

@{
    ViewBag.Title = "Edit";
}

<h2>Submit your answer</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("MissionQuestionID", Model.MissionQuestionID)
        @Html.Hidden("MissionID",Model.MissionID)
        @Html.Hidden("UserID",Model.UserID)
        @Html.Hidden("Question",Model.Question)
        <div>
            The Current Question Is:
            <strong>@Html.DisplayFor(model => model.Question)</strong> 
        </div>
        <br />
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.Ansswer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ansswer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ansswer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Questions", "QuestionPage","UserMissionQuestions", new { id = Model.MissionID }, new { @class="btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
