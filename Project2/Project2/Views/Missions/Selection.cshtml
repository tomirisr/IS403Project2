@model IEnumerable<Project2.Models.Mission>

@{
    ViewBag.Title = "Selection";
}
@{
    int iCount = 0;
    foreach (var item in Model)
    {
        iCount = iCount + 1;
        if (iCount == 1)
        {
<ul class="breadcrumb">
    <li> @Html.ActionLink("Home", "Index", "Home")</li>
    <li> @Html.ActionLink("Missions", "Selection", "Missions")</li>
</ul>
         }
     }
 }
<div class="row">
    <div class="container">
        <div class="col-md-6">
            <h3>Select a mission from the dropdown list to learn more about missions all over the world!</h3>
        </div>


        <div class="dropdown col-md-6">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                Missions
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                @foreach (var item in Model)
            {
                    <li> @Html.ActionLink(item.MissionName, "MissionFAQ", "MissionQuestions", new { id = item.MissionID }, null) </li>
                }
            </ul>
        </div>
    </div>
</div>

    
